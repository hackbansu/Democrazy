<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyleBlue">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_style_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonStyleGreen">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_style_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonStyleRed">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_style_red</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonSubmitStyle">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/button_style_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
