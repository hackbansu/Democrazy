<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_below="@id/one_rel"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Newspa"
        android:background="@drawable/backone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewsPaper links"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:paddingTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/NewspaperLink"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/amber_300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:layout_below="@id/Newspa"/>

    <RelativeLayout
        android:id="@+id/WholePoll"
        android:layout_below="@id/NewspaperLink"
        android:layout_width="match_parent"
        android:paddingTop="20dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/OpinionPollTXT"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opinion Poll"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/QuotionPoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/OpinionPollTXT"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="20dp"
            android:textColor="#fff"
            android:text="Will the permanent enactment of this bill in the future be beneficial for citizens?"/>

        <RelativeLayout
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_below="@id/QuotionPoll"
            android:layout_height="match_parent">

           <RelativeLayout
               android:id="@+id/Yes"
               android:background="#384"
               android:paddingTop="10dp"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:layout_marginRight="60dp"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
            <Button
                android:id="@+id/greenUp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/thumbsup"/>

              <TextView
                  android:layout_below="@id/greenUp"
                  android:paddingTop="10dp"
                  android:textSize="20sp"
                  android:textColor="#fff"
                  android:paddingBottom="10dp"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Yes"/>

           </RelativeLayout>


            <RelativeLayout
                android:id="@+id/No"
                android:background="@color/red_800"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/redDown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/dislike"/>

                <TextView
                    android:layout_below="@id/redDown"
                    android:paddingTop="10dp"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>