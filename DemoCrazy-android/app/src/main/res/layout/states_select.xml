<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/Rel"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/StatesSelect"
            android:text="States"
            android:textSize="40sp"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/SaveChangesButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:background="@color/orange_600"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/skipStateSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:layout_toRightOf="@id/StatesSelect"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/SaveChangesButt"
            android:layout_marginRight="10dp"
            android:background="@color/green_700"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/StatesSelectRecyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Rel"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</RelativeLayout>