<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp">

    <TextView
        android:id="@+id/OtpPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_one_time_password_otp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/OtpPassWordContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/OtpPassWord"
        android:layout_centerHorizontal="true"
        android:gravity="fill_horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="50dp"
        android:text="@string/OTP_contents_message"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="normal" />


    <EditText
        android:inputType="number"
        android:id="@+id/OtpEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/OtpPassWordContent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/otp_edit_text"
        android:hint="OTP"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />


    <TextView
        android:id="@+id/TryAgainOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/OtpEditText"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Try Again"
        android:textColor="@color/red_500"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/OtpEditText"
        android:layout_toLeftOf="@id/TryAgainOTP"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="Not Get Sms ?"
        android:textColor="#fff"
        android:textStyle="normal" />

    <Button
        android:id="@+id/Login_OTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TryAgainOTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="LOGIN"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>


